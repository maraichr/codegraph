{
  "realm": "lattice",
  "enabled": true,
  "sslRequired": "none",
  "registrationAllowed": false,
  "loginTheme": "lattice",
  "roles": {
    "realm": [
      {
        "name": "lattice_admin",
        "description": "Full admin access to Lattice"
      },
      {
        "name": "lattice_reader",
        "description": "Read-only access to Lattice"
      },
      {
        "name": "lattice_ingestor",
        "description": "Ingest/index access to Lattice"
      }
    ]
  },
  "clients": [
    {
      "clientId": "lattice",
      "name": "Lattice API (Confidential)",
      "enabled": true,
      "clientAuthenticatorType": "client-secret",
      "secret": "lattice-secret",
      "serviceAccountsEnabled": true,
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": true,
      "publicClient": false,
      "protocol": "openid-connect",
      "defaultClientScopes": ["lattice-scopes"],
      "protocolMappers": [
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "tenant_id",
            "claim.name": "tenant_id",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "lattice-public",
      "name": "Lattice Frontend (Public PKCE)",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "redirectUris": ["http://localhost:5173/*", "http://localhost:8080/*", "http://localhost:3000/*"],
      "webOrigins": ["http://localhost:5173", "http://localhost:8080", "http://localhost:3000"],
      "protocol": "openid-connect",
      "defaultClientScopes": ["lattice-scopes"],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocolMappers": [
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "tenant_id",
            "claim.name": "tenant_id",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    },
    {
      "clientId": "lattice-mcp",
      "name": "Lattice MCP (Claude Desktop)",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "redirectUris": ["http://localhost/*", "http://127.0.0.1/*"],
      "webOrigins": ["http://localhost", "http://127.0.0.1"],
      "protocol": "openid-connect",
      "defaultClientScopes": ["lattice-scopes"],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocolMappers": [
        {
          "name": "tenant_id",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-attribute-mapper",
          "config": {
            "user.attribute": "tenant_id",
            "claim.name": "tenant_id",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "clientScopes": [
    {
      "name": "lattice-scopes",
      "description": "Lattice API scopes",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      },
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "lattice",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        },
        {
          "name": "lattice-scopes-claim",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-hardcoded-claim-mapper",
          "config": {
            "claim.name": "lattice_scopes",
            "claim.value": "lattice:read lattice:write lattice:ingest",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        },
        {
          "name": "realm-roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "multivalued": "true",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "email": "testuser@latticegraph.dev",
      "firstName": "Test",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "testpass",
          "temporary": false
        }
      ],
      "realmRoles": ["lattice_admin", "lattice_reader", "lattice_ingestor"],
      "attributes": {
        "tenant_id": ["00000000-0000-0000-0000-000000000099"]
      }
    }
  ]
}
