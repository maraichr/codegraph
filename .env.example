# =============================================================================
# CodeGraph Environment Configuration
# Copy to .env and fill in values: cp .env.example .env
# =============================================================================

# -- PostgreSQL (used by: docker-compose, config.go, integration tests) -------
DB_USER=codegraph
DB_PASSWORD=codegraph
DB_NAME=codegraph

# -- Neo4j (used by: docker-compose, config.go) ------------------------------
NEO4J_USER=neo4j
NEO4J_PASSWORD=codegraph

# -- MinIO (used by: docker-compose, config.go) ------------------------------
MINIO_ACCESS_KEY=codegraph
MINIO_SECRET_KEY=codegraph123
MINIO_BUCKET=codegraph

# -- Webhooks (used by: webhook handler, docker-compose api service) ----------
WEBHOOK_SECRET=your-webhook-secret

# -- Embeddings (used by: config.go, docker-compose api/worker services) -----
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=openai/text-embedding-3-small
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_BASE_URL_COMPLETIONS=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_BASE_URL_EMBEDDINGS=https://openrouter.ai/api/v1/embeddings
OPENROUTER_DIMENSIONS=1024

# -- Auth (used by: docker-compose frontend service) --------------------------
AUTH_ENABLED=false

# -- Integration tests (used by: test/agent/, internal/analytics/, internal/mcp/session/) --
TEST_DATABASE_URL=postgres://codegraph:codegraph@localhost:5432/codegraph?sslmode=disable
TEST_VALKEY_ADDR=localhost:6379
